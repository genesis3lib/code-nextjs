FROM node:{{#nodeVersion}}{{{nodeVersion}}}{{/nodeVersion}}{{^nodeVersion}}22{{/nodeVersion}}-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy application code
COPY . .

# Expose Next.js dev server port
EXPOSE 3000

# Run development server
CMD ["npm", "run", "dev"]
